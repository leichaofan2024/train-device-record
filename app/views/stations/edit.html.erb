<%= simple_form_for @station do |f| %>
  <% if current_user.is_admin? %>
    <%= f.input :name, label: "机构名称" %>
  <% else %>
    <h3><%= @station.name %></h3>
  <% end %>
  <hr>
  <%= f.association :equipment_categories,as: :check_boxes, label: "请勾选该机构拥有的设备类型" %>
  <%= f.submit "创建", data: {disable_with: "提交中..."} %>
<% end %>
